{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "meta",
        "assets",
        "findings"
    ],
    "properties": {
        "meta": {
            "type": "object",
            "required": [
                "client_name",
                "report_type",
                "report_date",
                "report_version",
                "report_id"
            ],
            "properties": {
                "client_name": {
                    "type": "string"
                },
                "report_type": {
                    "type": "string"
                },
                "report_date": {
                    "type": "string"
                },
                "report_version": {
                    "type": "string"
                },
                "report_id": {
                    "type": "string"
                }
            }
        },
        "assets": {
            "type": "object",
            "required": [
                "logo_path"
            ],
            "properties": {
                "logo_path": {
                    "type": "string"
                }
            }
        },
        "kpis": {
            "type": "object"
        },
        "findings": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "severity",
                    "title",
                    "impact",
                    "recommendation"
                ],
                "properties": {
                    "severity": {
                        "type": "string",
                        "enum": [
                            "critical",
                            "high",
                            "medium",
                            "low",
                            "info"
                        ]
                    },
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "impact": {
                        "type": "string"
                    },
                    "recommendation": {
                        "type": "string"
                    },
                    "evidence": {
                        "type": "array"
                    }
                }
            }
        }
    }
}
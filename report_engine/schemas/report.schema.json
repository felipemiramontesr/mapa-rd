{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "meta",
        "assets",
        "ird",
        "vectors"
    ],
    "properties": {
        "meta": {
            "type": "object",
            "required": [
                "client_name",
                "report_type",
                "report_date",
                "report_version",
                "report_id"
            ],
            "properties": {
                "client_name": {
                    "type": "string"
                },
                "report_type": {
                    "type": "string"
                },
                "report_date": {
                    "type": "string"
                },
                "report_version": {
                    "type": "string"
                },
                "report_id": {
                    "type": "string"
                }
            }
        },
        "assets": {
            "type": "object",
            "required": [
                "logo_path"
            ],
            "properties": {
                "logo_path": {
                    "type": "string"
                }
            }
        },
        "kpis": {
            "type": "object"
        },
        "ird": {
            "type": "object",
            "required": [
                "score",
                "level",
                "level_class",
                "vector_count"
            ],
            "properties": {
                "score": {
                    "type": "integer"
                },
                "level": {
                    "type": "string"
                },
                "level_class": {
                    "type": "string"
                },
                "vector_count": {
                    "type": "integer"
                }
            }
        },
        "vectors": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "title",
                    "asset",
                    "asset_type",
                    "exposure_type",
                    "irv_score",
                    "irv_level",
                    "irv_class",
                    "components",
                    "description",
                    "impact_bullets",
                    "remediation_steps"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "asset": {
                        "type": "string"
                    },
                    "asset_type": {
                        "type": "string"
                    },
                    "exposure_type": {
                        "type": "string"
                    },
                    "irv_score": {
                        "type": "integer"
                    },
                    "irv_level": {
                        "type": "string"
                    },
                    "irv_class": {
                        "type": "string"
                    },
                    "components": {
                        "type": "object",
                        "required": [
                            "CA",
                            "ET",
                            "SE",
                            "IM",
                            "FE",
                            "DV"
                        ],
                        "properties": {
                            "CA": {
                                "type": "integer"
                            },
                            "ET": {
                                "type": "integer"
                            },
                            "SE": {
                                "type": "integer"
                            },
                            "IM": {
                                "type": "integer"
                            },
                            "FE": {
                                "type": "integer"
                            },
                            "DV": {
                                "type": "integer"
                            }
                        }
                    },
                    "description": {
                        "type": "string"
                    },
                    "impact_bullets": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "remediation_steps": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}